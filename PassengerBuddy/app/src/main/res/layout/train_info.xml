<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/trainNumberTextView"
        android:background="@drawable/train_number_background"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="31341"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:padding="2dp"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="#000"
        android:id="@+id/arrivalTimeTextView"
        android:layout_toEndOf="@+id/trainNumberTextView"
        android:layout_toRightOf="@+id/trainNumberTextView"
        android:layout_marginLeft="10dp"
        android:text="10:45 AM"
        android:textSize="20dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/modified_right_arrow"
        android:id="@+id/smallArrowImageView"
        android:layout_toRightOf="@+id/arrivalTimeTextView"
        android:layout_toEndOf="@+id/arrivalTimeTextView"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:id="@+id/destinationTimeTextView"
        android:textColor="#000"
        android:text="10:46 PM"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/smallArrowImageView"
        android:layout_toRightOf="@+id/smallArrowImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trainNameTextView"
        android:layout_below="@+id/trainNumberTextView"
        android:text="Sealdah-Naihati Local"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

</RelativeLayout>
